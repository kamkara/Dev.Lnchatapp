<%= turbo_frame_tag dom_id(@answer, 'actions') do %>
    <div class="flex mx-2">
        <div class="flex justify-between font-bold ">
<div class="font-semibold mr-2"><%= answer.vote_count %></div>

        <!-- Student Upvote-->
            <% if @answer.user.user_role == "Student" %>
                <div class="mx-4 ">
                    <%= link_to "Up Vote", answer_votes_path(
                        answer, 
                            choice: :up_vote, 
                            format: :turbo_stream
                        ), class: "card-link font-bold" %>
                </div>
                <div class="">
                    <%= link_to "Down Vote", answer_votes_path(
                            answer, 
                        choice: :down_vote, 
                            format: :turbo_stream
                        ),
                         class: "card-link font-bold" %>
                </div>
            <% end %>
        <!-- Author Options-->
            <% if @answer.user_id == current_user&.id %>
                <div class="mx-4 ">
                    <%= link_to "Editer", edit_question_answer_path(@answer.question, @answer) %>
                </div>
                <div class="">
                    <%= link_to "Suppimer", question_answer_path(@answer.question, @answer), "data-turbo-method": :delete %>
                </div>
            <% end %>

        <!-- Teacher Action-->
            <% if @answer.question.user.user_role == "Teacher" %>
                <% label = @answer.correct_answer ? "Correcte" : "Est-ce Correcte?" %>
                <div class="mx-4">
                    <%= link_to label, question_answer_correct_path(@answer.question, @answer) %>
                </div>
            <% end %>
        </div>
    </div>

<% end %>


