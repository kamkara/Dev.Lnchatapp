<div id="<%= dom_id anwser %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Content:</strong>
    <%= anwser.content %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= anwser.user_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Question:</strong>
    <%= anwser.question_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this anwser", anwser, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this anwser', edit_anwser_path(anwser), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
