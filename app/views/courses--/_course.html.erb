
<div id="<%= dom_id course %>" class="w-full flex border-b p-2 border-gray-300">
        <div class="flex flex-col ">
	        <div class="flex justify-between ">
			<div class="flex-none  "></div>
				<div class="flex-initial  ">
					<p class="font-bold text-xl "><%= course.material_name %></p>	
				</div>	
				
			</div>
			<div class="mt-4">
				<span class="font-bold text-xl"><%= course.title %></span>
			</div>

			<div class="mt-1">
				<%= truncate(strip_tags(course.content.to_s.html_safe), length: 400) %> 
				<span class="ln-btn-color ln-btn-hover-color ">Voir plus</span>
			</div>
            
      <!-- Bottom items of course -->
      <div class="border-t mt-2">
	      <div class="flex justify-between my-1">
          <%= render "courses/shared/feed/feed_essentials", course: course %>
          <%= render "courses/shared/feed/feed_exercices", course: course %>
          <%= render "courses/shared/feed/feed_questions", course: course %>
        </div>
      </div>
		</div> 
	</div>