
<% question.anwsers.each do |anwser| %>
<!-- Question-->
<div class="col-start-1 col-end-11 bg-white border rounded-bl-xl rounded-r-xl">
	<div class="flex items-center text-md  p-2" >
		<div class="">
			<div class="pb-2">
				<div class="font-semibold text-sm"><%= anwser.user.full_name %></div>
				<div class="italic text-xs ml-4">élève au <%= anwser.user.school_name %></div> 
			</div>
			<div class="flex" >
                <%= anwser.content %>
			</div>
        </div>
	</div>
</div>
<!-- My Anwser-->
<% if current_user.id == "#{anwser.user_id}"  || current_user.user_role == "Teacher" %>
<div class="col-start-3 col-end-13 border rounded-br-xl rounded-l-xl">
	<div class="flex items-center justify-start flex-row-reverse bg-indigo-100 p-2">
		<div class="">
			<div class="pb-2">
				<div class="font-semibold text-sm"><%= anwser.user.full_name %></div>
                    <!-- Teacher anwser -->
                    <% if current_user.user_role == "Teacher"  %>
                        <div class="italic text-xs ml-4">Prof de <%= anwser.user.material_name %> au <%= anwser.user.school_name %></div>
                    <!-- Student and other  anwser -->
                    <% else %>
                        <div class="italic text-xs ml-4"><%= anwser.user.school_name %></div>
                    <% end %>
			</div>
			<div class="flex" >
				<%= anwser.content %>
			</div>
        </div>
	</div>
</div>
<% end %>

<% end %>
					