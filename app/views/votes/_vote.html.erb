<div id="<%= dom_id vote %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Choice:</strong>
    <%= vote.choice %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Question:</strong>
    <%= vote.question_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= vote.user_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this vote", vote, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this vote', edit_vote_path(vote), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
